@model Teacher
@{
    Layout = "_Layout";
}
@section info{
    <div class="user_img">
        <img class="img-responsive"
         src="@ViewData["Path"]"
         alt="#" />
    </div>
    <div class="user_info">
        <h6>@ViewData["Name"]</h6>
        <p><span class="online_animation"></span>Yönetici</p>
    </div>
}
    @section menus{
    <a href="#dashboard" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
        <i class="fa fa-dashboard yellow_color"></i> <span>İşlemler</span>
    </a>
    <ul class="collapse list-unstyled" id="dashboard">
        <li>
            <a asp-action="ListStudent" asp-controller="Boss">> <span>Öğrenci Listele</span></a>
        </li>N
        <li>
            <a asp-action="ListTeachers" asp-controller="Boss">> <span>Öğretmen Listele</span></a>
        </li>
        @if (ViewBag.isBoss)
        {
            <li>
                <a asp-action="ListTeachers" asp-controller="Boss"> <span>>Yönetici Listele</span></a>
            </li>
        }
        <li>
            <a asp-action="CreateStudent" asp-controller="Boss">> <span>>Öğrenci Ekle</span></a>
        </li>
        <li>
            <a asp-action="OgrenciAktar" asp-controller="Boss">> <span>>Öğrenci Aktar</span></a>
        </li>

    </ul>
}
@section pages{
    <div class="login">

        <div class="login-header">
            <div class="img-content"> <img class="logos" src="https://seeklogo.com/images/K/kocaeli___niversitesi-logo-440B62032E-seeklogo.com.png"></div>

        <form asp-controller="Boss" asp-action="OgrenciAktar" method="post" enctype="multipart/form-data">
                <div class="form-group">

                    <label>Excell Dosyasını Seçin</label>
                    <input type="file" name="postedFile" />
                </div>
                    <input type="submit" value="Import" />
        </form>
        </div>
    </div>
    }
