@model Student
@{
    Layout = "_HomeLayout";
}
@section who{
    <h3>ÖĞRENCİ BİLGİ SİSTEMİ / ÖĞRENCİ</h3>
}
@section forms{
    <form method="post" asp-action="StudentLogin" asp-controller="Home">
        <input required type="text" asp-for="StudentNumber" placeholder="Öğrenci Numarası">
        <input required asp-for="StudentPassword" type="password" placeholder="ÖBS Şifreniz">
        <div class="g-recaptcha" data-sitekey="6LeaATUiAAAAAMzyY4We68btgAjg4NrKtFbSzLaK" data-callback="enableBtn"></div>
        <div class="login-footer">
            <button disabled="disabled" id="login-1" type="submit">Giriş Yap</button>
        </div>
    </form>
}